import numpy as np
import time
from ezGraph2 import *

#GRAPH THE FUNCTION f(x) = x**0.5

#parameters
dt = 1.
nsteps = 50

# linear model
m = -21.6
b = -4.78

#graph
graph = ezGraph(xmax=50, ymax=50)
#, xlabel="time", ylabel="height"


#time loop
for t in range(nsteps): 
    modeltime = t * dt
    h = m * modeltime + b
    print(modeltime,h)
    graph.add(modeltime,h)
    graph.wait(.01)
    


# DRAW GRAPH
graph.keepOpen()   
 # keep graph open when done
